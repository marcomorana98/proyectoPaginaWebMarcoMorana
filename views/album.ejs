<main>
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% for(var i=0;i<foo.length; i++){ %>
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
            <div class="card-body">
              <p class="card-text"><%= foo[i].direccion %> <%= foo[i].altura %></p>
              <div class="boton-de-asistencia">
                <form action = "test" method = "POST">
                  <input type="text" hidden name="obra" value=<%= foo[i].direccion %>></input>
                  <input class="fecha" name="fecha"></input>
                  <input type="text" hidden name="hora" value=<%= new Date().getHours() %>></input>
                  <input type="number" hidden name="latitud" value=<%= foo[i].lat %>></input>
                  <input type="number" hidden name="longitud" value=<%= foo[i].long %>></input>
                  <input class= "userLatitud" type="number" step="0.0000001" name="userLatitud"></input>
                  <input class= "userLongitud" type="number" step="0.0000001" name="userLongitud"></input>
                  <div class="btn-group">
                    <button type="submit" class="btn btn-sm btn-outline-secondary">Dar Asistencia</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>

