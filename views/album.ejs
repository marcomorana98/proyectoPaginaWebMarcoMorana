    <script defer>

      const date = new Date();
      let day = date.getDate();
      let month = date.getMonth() + 1;
      let year = date.getFullYear();

      let currentDate = `${year}-${month}-${day}`;
      console.log(currentDate);

      
    const options = {
      enableHighAccuracy: true,
      timeout: 5000,
      maximumAge: 0,
    };

    function success(pos) {
      const crd = pos.coords;

      console.log("Your current position is:");
      console.log(`Latitude : ${crd.latitude}`);
      console.log(`Longitude: ${crd.longitude}`);
      console.log(`More or less ${crd.accuracy} meters.`);

      document.querySelectorAll(".userLatitud").forEach(element => {
        element.value = crd.latitude;
      });
      document.querySelectorAll(".userLongitud").forEach(element => {
        element.value = crd.longitude;
      });


      //document.getElementById("test").value = crd.latitude;
      document.querySelectorAll(".fecha").forEach(element => {
        element.value = currentDate;
      });
    }

    function error(err) {
      console.warn(`ERROR(${err.code}): ${err.message}`);
    }

    navigator.geolocation.getCurrentPosition(success, error, options);
      


    </script>

    

